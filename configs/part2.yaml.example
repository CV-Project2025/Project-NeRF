# OctNeRF Part 2 配置 - Multi-view NeRF

mode: part2_nerf

# 位置编码
use_positional_encoding: true
L_embed: 10
#L_embed: 12
use_viewdirs: true
L_embed_dir: 4

# 网络结构
hidden_dim: 256
num_layers: 8
skip_layer: 4
view_dim: 128

# 渲染配置
n_samples: 64
# n_samples: 96
# render_n_samples: 128
near: 2.0
far: 6.0
white_bkgd: true
scene_scale: 1.0

# 训练配置
train_iters: 20000
# train_iters: 100000
learning_rate: 0.0005
batch_size: 4096
log_every: 100
save_every: 2000
# log_every: 200
# save_every: 10000

# 数据配置
downscale: 2
# downscale: 1

# 输出配置
log_dir: output/part2
chunk: 8192
